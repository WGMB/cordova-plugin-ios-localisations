<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0" id="cordova-plugin-ios-localisations" version="1.0">
	<name>Cordova iOS Localisations</name>
	<description>This plugin is used to localise your iOS app's contents & other assets like app permission texts.</description>
	<repo>https://github.com/WGMB/cordova-plugin-ios-localisations.git</repo>
	
	<engines>
		<engine name="cordova"         version=">=7.1.0"  />
		<engine name="cordova-plugman" version=">=4.3.0"  />
		<engine name="apple-ios"       version=">=10.0.0" />
	</engines>

	<platform name="ios">
		<resource-file src="src/ios/en.lproj"/>
		<resource-file src="src/ios/de.lproj"/>
		<resource-file src="src/ios/es.lproj"/>
		<resource-file src="src/ios/zh-Hans.lproj"/>
		<resource-file src="src/ios/pt-BR.lproj"/>
		<resource-file src="src/ios/pt-PT.lproj"/>
		<resource-file src="src/ios/tr.lproj"/>
	</platform>
</plugin>
