<?xml version="1.0" encoding="UTF-8"?>
<plugin
  xmlns="http://apache.org/cordova/ns/plugins/1.0"
  xmlns:android="http://schemas.android.com/apk/res/android"
  id="cordova-plugin-ios-localisations"
  version="1.0">
	<author>WGMB</author>
	<name>Cordova iOS Localisations</name>
	<description>This plugin is used to localise your iOS app's contents and other assets like app permission texts.</description>
	<repo>https://github.com/WGMB/cordova-plugin-ios-localisations.git</repo>
	<engines>
	    <engine name="cordova" version=">=6.0.0" />
	    <engine name="cordova-ios" version=">=4.0.0" />
	  </engines>
	<platform name="ios">
 		<resource-file src="src/ios/en.lproj"/>
		<resource-file src="src/ios/de.lproj"/>
		<resource-file src="src/ios/es.lproj"/>
		<resource-file src="src/ios/zh-Hans.lproj"/>
		<resource-file src="src/ios/pt-BR.lproj"/>
		<resource-file src="src/ios/pt-PT.lproj"/>
		<resource-file src="src/ios/tr.lproj"/>
	</platform>
</plugin>
